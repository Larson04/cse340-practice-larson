<%- include('../../partials/header') %>

    <h1><%= title %></h1>

    <!-- TODO: Check if users array exists and has content -->
    <!-- TODO: Loop through users and display: ID, name, email, registration date -->
    <!-- TODO: Format the created_at date nicely -->
    <!-- TODO: Add appropriate classes and ids; see the styles section for some ideas -->
    <!-- TODO: Handle the case when no users are registered -->
    <!-- NOTE: Sorting will not be a feature on this page -->
    
    <% if (userList && userList.length > 0) { %>
        <div class="users-list">
            <% userList.forEach((user) => { %>
                <div class="user-card">
                    <div class="user-header">
                        <h3 class="user-name"><%= user.name %></h3>
                        <h3 class="user-id"><%= user.id %></h3>
                    </div>
                    <div class="user-details">
                        <p class="user-email"><%= user.email %></p>
                        <p class="user-date">Created: <%= new Date(user.created_at).toLocaleDateString() %></p>
                    </div>
                    
                        <% 
                            const isOwnCard = currentUser.rows[0].id === user.id;
                            const isAdmin = currentUser.rows[0].role_name === 'admin';
                            const canEdit = isOwnCard || isAdmin;
                            const canDelete = isAdmin && !isOwnCard;
                        %>
                        <div class="user-actions">
                            <% if (canEdit) { %>
                                <button class="button"><a href="/users/<%= user.id %>/edit">Edit</a></button>
                            <% } %>
                            <% if (canDelete) { %>
                                <form method="POST" action="/users/<%= user.id %>/delete" style="display: inline;">
                                    <button type="submit" onclick="return confirm('Delete this user?')">Delete</button>
                                </form>
                            <% } %>
                        </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p class="no-responses">No registered users yet.</p>
    <% } %>


<%- include('../../partials/footer') %>