<%- include('../../partials/header') %>
<main>
    <h1><%= title %></h1>
    <p>
        Enter your email and password to access your account. Don't have an account? <a href="/register">Register here</a>.
    </p>

    <form method="POST" action="/register" class="registration-form">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Enter your full name" minlength="7" required>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email address" required>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="" pattern="(?=.*[0-9])(?=.*[!@#$%^&*]).*" minlength="8" required>
            <p>Password must be at least 8 characters long and contain at least one number and one special character: !@#$%^&* </p>
        </div>

        <button type="submit">Log In</button>
    </form>

</main>
<%- include('../../partials/footer') %>